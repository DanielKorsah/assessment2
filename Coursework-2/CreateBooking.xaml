<Window x:Class="Coursework_2.CreateBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coursework_2"
        mc:Ignorable="d"
        Language="en-GB"
        Title="CreateBooking" Height="489.096" Width="600">
    <Grid>
        <DatePicker x:Name="inDatePick" HorizontalAlignment="Left" Margin="187,44,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="outDatePick" HorizontalAlignment="Left" Margin="187,76,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Start Date*" HorizontalAlignment="Left" Margin="48,43,0,0" VerticalAlignment="Top" Width="66"/>
        <Button x:Name="button" Content="Confirm" HorizontalAlignment="Left" Margin="55,419,0,0" VerticalAlignment="Top" Width="147" Click="button_Click"/>
        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.267,-0.545" Click="backButton_Click"/>
        <Label x:Name="label2" Content="End Date*" HorizontalAlignment="Left" Margin="48,75,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBox x:Name="dietBox" HorizontalAlignment="Left" Height="45" Margin="187,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label x:Name="label1" Content="Diet Requirements" HorizontalAlignment="Left" Margin="48,111,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="breakfastBox" Content="Breakfast" HorizontalAlignment="Left" Margin="55,167,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="mealsBox" Content="Meals" HorizontalAlignment="Left" Margin="55,194,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="carBox" Content="Car Hire" HorizontalAlignment="Left" Margin="55,224,0,0" VerticalAlignment="Top" Click="carBox_Click"/>
        <TextBox x:Name="driverNameBox" HorizontalAlignment="Left" Height="23" Margin="187,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" IsEnabled="False"/>
        <DatePicker x:Name="driveDay1Picker" HorizontalAlignment="Left" Margin="346,221,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <DatePicker x:Name="driveDay2Picker" HorizontalAlignment="Left" Margin="463,221,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label x:Name="label3" Content="Below are the guests on this booking" HorizontalAlignment="Left" Margin="55,296,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addGuestButton" Content="Add Guest" HorizontalAlignment="Left" Margin="55,269,0,0" VerticalAlignment="Top" Width="75" Click="addGuestButton_Click"/>
        <TextBox x:Name="guestsBox" HorizontalAlignment="Left" Height="92" Margin="55,322,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="376" IsManipulationEnabled="True"/>
    </Grid>
</Window>
